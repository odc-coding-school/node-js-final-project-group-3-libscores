<%- include("./partial/head") %>
<%- include("./partial/top-nav.ejs") %>
    <div>
    <main class="container">
        <h1>Search Results for "<%= searchTerm %>"</h1>

<h2>Players</h2>
<table>
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Club</th>
            <th>Position</th>
            <th>DOB</th>
        </tr>
    </thead>
    <tbody>
        <% if (players.length === 0) { %>
            <tr>
                <td colspan="4">No results found.</td>
            </tr>
        <% } else { %>
            <% players.forEach(player => { %>
                <tr>
                    <td><%= player.fullname %></td>
                    <td><%= player.club %></td>
                    <td><%= player.position %></td>
                    <td><%= player.DOB %></td>
                </tr>
            <% }); %>
        <% } %>
    </tbody>
</table>

<h2>Clubs</h2>
<table>
    <thead>
        <tr>
            <th>Club</th>
            <th>Country</th>
            <th>Founded</th>
        </tr>
    </thead>
    <tbody>
        <% if (clubs.length === 0) { %>
            <tr>
                <td colspan="3">No results found.</td>
            </tr>
        <% } else { %>
            <% clubs.forEach(club => { %>
                <tr>
                    <td><%= club.club %></td>
                    <td><%= club.country_id %></td>
                    <td><%= club.founded %></td>
                </tr>
            <% }); %>
        <% } %>
    </tbody>
</table>

<h2>Games</h2>
<table>
    <thead>
        <tr>
            <th>Home Team</th>
            <th>Away Team</th>
            <th>Date</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
        <% if (games.length === 0) { %>
            <tr>
                <td colspan="4">No results found.</td>
            </tr>
        <% } else { %>
            <% games.forEach(game => { %>
                <tr>
                    <td><%= game.home %></td>
                    <td><%= game.away %></td>
                    <td><%= game.date %></td>
                    <td><%= game.score %></td>
                </tr>
            <% }); %>
        <% } %>
    </tbody>
</table>

<h2>Competitions</h2>
<table>
    <thead>
        <tr>
            <th>Competition</th>
            <th>Country</th>
            <th>Season</th>
        </tr>
    </thead>
    <tbody>
        <% if (competitions.length === 0) { %>
            <tr>
                <td colspan="3">No results found.</td>
            </tr>
        <% } else { %>
            <% competitions.forEach(competition => { %>
                <tr>
                    <td><%= competition.competition %></td>
                    <td><%= competition.country_id %></td>
                    <td><%= competition.season %></td>
                </tr>
            <% }); %>
        <% } %>
    </tbody>
</table>

    </main>
    </div>
    