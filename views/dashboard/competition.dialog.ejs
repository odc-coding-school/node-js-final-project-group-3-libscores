    <!-- Button to open dialog -->
    <button data-ui="#competitonDialog" class="chip ">
        <i class="fa fa-plus"></i> Add League
    </button>

    <!-- Dialog to add league -->
    <dialog class="dialog small" data-ui="competitonDialog">
        <header class="dialog-header">
            <h4 class="large align-center">League Name </h4>
            <button class="icon-button" id="closeDialog">
                <i class="fa fa-close" data-ui="#competitonDialog"></i>
            </button>
        </header>

        <section class="dialog-content">
            <div id="message" class="message align-center" style="display:none;"></div> <!-- Success/Error Message -->
            <span>
                <label for="league" class="label">League Name</label>
                <input name="league" id="league" class="block input" placeholder="Orange First Division...">
            </span>
            <section class="row flex">
                <span>
                    <label for="founded" class="label">Year Founded</label>
                    <input name="founded" id="founded" class="block input" placeholder="Feb 18, 1980">
                </span>
                <span>
                    <label for="type" class="label">Type</label>
                    <select name="type" id="type" class="block input">
                        <option value="football">Football</option>
                        <option value="kickball">Kickball</option>
                        <option value="basketball">Basketball</option>
                    </select>
                </span>
            </section>
            
            <section class="row flex">
                <span class="column no-gap">
                    <label for="continent" class="label block">Continent</label>
                    <select name="continent" id="continent" class="block input">
                        <option value="africa">Africa</option>
                    </select>
                </span>
                <span>
                    <label for="country" class="label">Country</label>
                    <select name="country" id="countries" class="block input">
                    </select>
                </span>
            </section>

            <section class="row flex">
                <span class="column no-gap">
                    <label for="value" class="label block">Market Value</label>
                    <input type="number" name="value" id="value" class="input block" placeholder="US$ 300,3500">
                </span>
                <span class="column no-gap">
                    <label for="logo" class="label block">Logo</label>
                    <input type="file" name="logo" id="logo" class="input block">
                </span>
            </section>
        </section>

        <footer class="dialog-footer">
            <button type="submit" class="button move-right" id="saveLeague">Save League</button> <!-- Updated ID -->
            <span id="spinner" style="display:none;">
                <i class="fa fa-spinner fa-spin"></i> Saving...
            </span>
        </footer>
    </dialog>

