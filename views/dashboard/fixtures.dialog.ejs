<!-- Button to open dialog -->
<button class="small-button" data-ui="#fixturesDialog">
    <i class="fa fa-plus"></i>
    New March
</button>

<!-- Dialog to add phase -->
<dialog class="dialog small" data-ui="fixturesDialog">
    <header class="dialog-header">
        <h4 class="large align-center">Create New Match</h4>
        <button class="icon-button" id="closeDialog">
            <i class="fa fa-close" data-ui="#fixturesDialog"></i>
        </button>
    </header>

    <section class="dialog-content">
        <div id="fixturesMsg" class="message align-center"></div> 
        <!-- Form Fields -->
        <section class="column">
            <span>
                <label for="hometeam" class="label">Home Team</label>
                <select name="hometeam" id="hometeam" class="block input  team-selector">
                    <option value="home">home team</option>
                </select>
            </span>
            <span>
                <label for="awayteam" class="label">Away Team</label>
                <select name="awayteam" id="awayteam" class="block input  team-selector">
                    <option value="home">away team</option>
                </select>
            </span>
            <span>
                <label for="start" class="label">Start Time</label>
                <input  type="datetime-local" name="start" id="start" class="block input">
            </span>
        </section>
    </section>

    <footer class="dialog-footer">
        <button type="button" class="button center row" id="saveFixtures">
            <span>Save Match</span>
        </button> 
    </footer>
</dialog>
