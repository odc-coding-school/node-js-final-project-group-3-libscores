<header>
    <nav class="bg-white row bg-white small-padding">
        <section class="fix-main row">
            <span class="row">
                <button class="small-button" data-modal="#sidebar">
                    <i class="fa fa-bars large" aria-hidden="true"></i>
                </button>
                <a href="/">
                    <img src="/images/newlogo.png" alt="libscore logo" class="site-logo">
                </a>
            </span>
            <section class="move-right row">
                <form action="/search" method="get" class="row search-fields padding-right">
                    <input type="search" class="input search max" name="q" placeholder="What are you looking for?">
                    <button type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
                <a href="/login" class="small-button blue">
                    <i class="fa fa-user"></i>
                    <button id="contribute" style="cursor: pointer;"> Login</button>
                </a>
            </section>
        </section>
    </nav>
</header>

<!-- Contribute modal -->
<div id="overactive" class="overlay" style="display: none;"></div> <!-- Overlay for contribute modal -->
<div id="contributeButton" class="pop border bg-white padding box huge-elevate" style="display: none;">
    <i class="fa-solid fa-close red large padding" id="closeBtn" style="cursor: pointer;"></i>
    <div class="align-center">
        <h1 class="huge margin-bottom">Login</h1>
        <form action="/login" method="POST">
            <input type="email" name="email" placeholder="Enter your Email" class="padding border margin-bottom" required>
            <input type="password" name="password" placeholder="Enter your password" required class="padding border margin-bottom">
            <button type="submit" class=" border" style="background-color: red; color: white; cursor: pointer;">Login</button>
            <p class="margin-top">You don't have an account?</p>
            <a href="https://docs.google.com/forms/d/e/1FAIpQLScq4_j1NquFzSMxXI5Qu7iyj0gMVcULoNDcZAOpJSIm18kfRg/viewform?usp=pp_url"><strong><u>Register now</u></strong></a>
        </form>
    </div>
</div>

<ul id="search-results" class="dropdown"></ul>
<script src="/javascripts/pop.js"></script>